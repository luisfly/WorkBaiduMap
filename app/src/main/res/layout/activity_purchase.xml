<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PurchaseActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:orientation="vertical"
        android:background="#3871DE">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="46dp">

            <LinearLayout
                android:layout_width="400dp"
                android:layout_height="28dp"
                android:background="@drawable/function_selector"
                android:layout_centerInParent="true">

            </LinearLayout>

        </RelativeLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/store"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="门店" />

    <EditText
        android:id="@+id/select_store"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="门店选择框" />

    <TextView
        android:id="@+id/ploadno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="装载号" />

    <EditText
        android:id="@+id/input_ploadno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="装载号输入框" />

    <EditText
        android:id="@+id/load_tray_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="装载明细显示" />


    <Button
        android:id="@+id/purchase_commit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="交货确认" />

    <Button
        android:id="@+id/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="取消" />

</LinearLayout>